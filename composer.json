{
    "name": "zaphyr-org/logger",
    "description": "A PSR-3 logger with different log handlers.",
    "keywords": [
        "logger",
        "psr3",
        "PSR-3"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "merloxx",
            "email": "merloxx@zaphyr.org",
            "homepage": "https://merloxx.it",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "ext-mbstring": "*",
        "psr/log": "^1.1",
        "symfony/mailer": "^5.4",
        "zaphyr-org/utils": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "9.*",
        "phpstan/phpstan": "^0.12.99",
        "phpstan/phpstan-phpunit": "^0.12.22",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "Zaphyr\\Logger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zaphyr\\LoggerTests\\": "tests/"
        }
    },
    "scripts": {
        "cs": "phpcs --standard=PSR12 -n src",
        "cbf": "phpcbf --standard=PSR12 -n src",
        "unit": "phpunit --colors=always",
        "phpstan": "phpstan analyse --memory-limit 512M",
        "test": [
            "@unit",
            "@phpstan",
            "@cs"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
